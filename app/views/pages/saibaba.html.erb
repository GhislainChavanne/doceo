<div class="banner-pages" style="background-color: #10263c;">
  <div class="banner-content text-center">
    <h1>Saibaba School<br><%= I18n.t('.title4') %></h1>
  </div>
</div>

<div class="wrapper-mandela">
  <h3 id="text-accroche"><i class="fa fa-quote-left" aria-hidden="true"></i> <%= I18n.t('.mandela') %> <i class="fa fa-quote-left" aria-hidden="true"></i><br>
  <span style="font-weight: 300; font-size: 18px">Nelson Mandela</span></h3>
</div>

<div class="wrapper" style="background-color: #f4f4f4;">
  <div class="container">
    <h2 class="title-section">Saibaba School</h2>
    <div class="row text-center">
      <div class="col-md-4 col-xs-12">
        <div type="button" data-toggle="modal" data-target=".bs-example-modal-lg1" style="cursor: pointer">
        <div class="card-saibaba">
          <div class="banner-saibaba" style="background-image: url('<%= image_path('car.png') %>');">
          </div>
          <p>Pourquoi Saibaba?</p>
        </div>
        </div>
      </div>
      <div class="col-md-4 col-xs-12">
        <div type="button" data-toggle="modal" data-target=".bs-example-modal-lg3" style="cursor: pointer">
          <div class="card-saibaba">
            <div class="banner-saibaba" style="background-image: url('<%= image_path('car2.png') %>');">
            </div>
            <p>Ses caractéristiques</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-xs-12">
        <div type="button" data-toggle="modal" data-target=".bs-example-modal-lg2" style="cursor: pointer">
          <div class="card-saibaba">
            <div class="banner-saibaba" style="background-image: url('<%= image_path('car3.png') %>');">
            </div>
            <p>Ses besoins</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

